{templateType Stepapo\Dataset\Control\ItemList\ItemListTemplate}

<tbody n:class="$itemListClass" n:snippet>
	{if $main->getCurrentCount() > 0}
		{foreach $items as $item}
			{control 'item-' . $item->getValue($idColumnName)}
		{/}
	{else}
		{php $colspan = 0}
		{foreach $columns as $column}{if !$column->hide}{php $colspan++}{/}{/}
		<tr>
			<td colspan="{$colspan}">
				{_$text->noResults}
			</td>
		</tr>
	{/}
</tbody>
